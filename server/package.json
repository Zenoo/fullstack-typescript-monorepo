{
  "name": "@fullstack-typescript-monorepo/server",
  "version": "1.4.0",
  "private": true,
  "exports": "./src/server.js",
  "type": "module",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "compile": "tsc --build ./tsconfig.json",
    "start": "node ./lib/main.js",
    "start:watch": "tsc-watch --build ./tsconfig.json --onSuccess \"node ./lib/main.js\"",
    "db:migrate:manual": "prisma migrate dev --create-only",
    "db:sync:dev": "prisma migrate dev && cp ../prisma/package.reference.json ../prisma/package.json",
    "db:sync:prod": "prisma migrate deploy && yarn db:seed",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset --skip-generate",
    "studio": "prisma studio",
    "lint": "gts lint",
    "clean": "gts clean",
    "fix": "gts fix",
    "prepare": "yarn.cmd run compile",
    "pretest": "yarn.cmd run compile",
    "posttest": "yarn.cmd run lint"
  },
  "prisma": {
    "seed": "node --loader ts-node/esm src/seed.ts"
  },
  "dependencies": {
    "@fullstack-typescript-monorepo/core": "workspace:*",
    "@fullstack-typescript-monorepo/prisma": "workspace:*",
    "@prisma/client": "^5.14.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "dayjs": "^1.11.11",
    "discord.js": "^14.15.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "i18next": "^23.11.5",
    "i18next-fs-backend": "^2.3.1",
    "node-fetch": "^3.3.2",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.13"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/node": "20.11.5",
    "@types/node-fetch": "^2.6.11",
    "@types/node-schedule": "^2.1.7",
    "@types/nodemailer": "^6.4.15",
    "gts": "^5.3.0",
    "prisma": "^5.14.0",
    "tsc-watch": "^6.2.0",
    "typescript": "~5.4.3"
  }
}
