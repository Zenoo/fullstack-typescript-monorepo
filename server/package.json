{
  "name": "@fullstack-typescript-monorepo/server",
  "version": "1.4.0",
  "private": true,
  "entry": "src/server.js",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "compile": "tsc",
    "start": "node ./lib/server.js",
    "start:watch": "tsc-watch --build ./tsconfig.json --onSuccess \"node ./lib/server.js\"",
    "db:sync:dev": "prisma migrate dev && cp ../prisma/package.reference.json ../prisma/package.json",
    "db:sync:prod": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "studio": "prisma studio"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@fullstack-typescript-monorepo/core": "*",
    "@fullstack-typescript-monorepo/prisma": "*",
    "@prisma/client": "^5.0.0",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.0",
    "discord.js": "^14.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.20.0",
    "i18next": "^22.4.9",
    "i18next-fs-backend": "^2.1.1",
    "moment": "^2.29.4",
    "nodemailer": "^6.9.9"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/node": "^18.11.15",
    "@types/nodemailer": "^6.4.7",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "prisma": "^5.0.0",
    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.9.4"
  }
}
