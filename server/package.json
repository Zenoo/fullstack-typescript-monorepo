{
  "name": "@fullstack-typescript-monorepo/server",
  "version": "1.1.3",
  "private": true,
  "entry": "src/server.js",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "compile": "tsc",
    "start": "node ./lib/server.js",
    "start:watch": "tsc-watch --build ./tsconfig.json --onSuccess \"node ./lib/server.js\"",
    "db:sync:dev": "prisma migrate dev",
    "db:sync:prod": "prisma generate && prisma migrate deploy",
    "db:seed": "prisma db seed"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@fullstack-typescript-monorepo/core": "*",
    "@fullstack-typescript-monorepo/prisma": "*",
    "@prisma/client": "^4.7.1",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.0",
    "express": "^4.18.1",
    "moment": "^2.29.4",
    "nodemailer": "^6.8.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/node": "^18.11.15",
    "@types/nodemailer": "^6.4.7",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "prisma": "^4.7.1",
    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.9.4"
  }
}
