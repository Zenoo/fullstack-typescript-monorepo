{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "esModuleInterop": true,
    "target": "ESNext",
    "lib": ["esnext.disposable"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../prisma"
    }
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": true
  }
}
